<Window x:Class="PlayfairProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayfairProgram"
        mc:Ignorable="d"
        Title="Szyfrator Playfair" Height="503.922" Width="525">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="473" VerticalAlignment="Top" Width="517" SelectionChanged="tabControl_SelectionChanged">
            <TabItem Header="Szyfrator">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="label" Content="Podaj tekst do zaszyfrowania" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label1" Content="Zaszyfrowany tekst" HorizontalAlignment="Left" Margin="15,178,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="EncryptButton" Content="Zaszyfruj" HorizontalAlignment="Left" Margin="23,151,0,0" VerticalAlignment="Top" Width="75" Click="EncryptButton_Click"/>
                    <TextBox x:Name="TextTB" HorizontalAlignment="Left" Height="95" Margin="23,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194"/>
                    <TextBox x:Name="encryptedTB" HorizontalAlignment="Left" Height="84" Margin="23,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" IsEnabled="False"/>
                    <TextBox x:Name="encryptedTBUser" HorizontalAlignment="Left" Height="95" Margin="265,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" TextChanged="encryptedTBUser_TextChanged"/>
                    <Label x:Name="label3" Content="Podaj text do rozszyfrowania" HorizontalAlignment="Left" Margin="265,15,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="DecryptButton" Content="Zdeszyfruj" HorizontalAlignment="Left" Margin="265,151,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
                    <TextBox x:Name="DecryptedTB" HorizontalAlignment="Left" Height="84" Margin="265,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" TextChanged="DecryptedTB_TextChanged"/>
                </Grid>
            </TabItem>
            <TabItem Header="O programie" HorizontalAlignment="Left" Width="86" Margin="57,0,-57,-2">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="About" HorizontalAlignment="Left" Height="425" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="491" TextChanged="textBox_TextChanged" Text="Głównym mechanizmem działania są funkcje &#xD;&#xA;&gt;encrypt(String text, Playfair cipher)&#xD;&#xA;&#x9;-najpierw usuwane są znaki białe i interpunkcyjne&#xD;&#xA;&#x9;-następnie w miejsca w których są dwie litery są takie same dodawana jest pomiędzy litera 'x'&#xD;&#xA;&#x9;-jeżeli liczba liter jest nieparzysta dodawane jest na końcu x&#xD;&#xA;&#x9;-tak przygotowany tekst jest przypisywany do listy utworzonej z klasy Plain, oraz obliczane są współrzędne każdej litery w tablicy szyfrującej&#xD;&#xA;&#x9;-litery są zamieniane zgodnie z szyfrem Playfair'a przy pomocy wyznaczonych współrzędnych, zapisywane na osobną liste i przypisywane do jednego napisu&#xD;&#xA;&gt;decrypt(String text, Playfair cipher)&#xD;&#xA;&#x9;-litery są przypisywane na liste złożoną z elementów typu Plain i obliczane sa ich współrzędne&#xD;&#xA;&#x9;-na podstawie współrzędnych i algorytmu deszyfracji program zapisuje do nowej listy zdeszyfrowane elementy typu Plain&#xD;&#xA;&#x9;-sprowadzanie listy do postaci String&#xD;&#xA;&#xD;&#xA;Klasa Playfair utrzymuje klucz potrzebny do szyfrowania i deszyfrowania w tablicy dwuwymiarowej.&#xD;&#xA;Klasa Plain reprezentuje blok, na które dzielony jest tekst, oraz współrzędne tych liter w tablicy szyfrującej znajdującej się w klasie Playfair&#xD;&#xA;&#xD;&#xA;*Program nie uwzględnia litery 'j', która jest zamieniana na 'i'&#xD;&#xA;*Program pomija znaki intrepunkcyjne i białe&#xD;&#xA;&#xD;&#xA;Autor: Emilian Ossowski&#xD;&#xA;" IsEnabled="False"/>
                </Grid>
            </TabItem>
            <TabItem Header="Klucz" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="54" Margin="-85,0,0,0">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="506*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="label2" Content="Aktualny klucz" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="CipherTB" Grid.Column="1" HorizontalAlignment="Left" Height="124" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" TextChanged="CipherTB_TextChanged" IsEnabled="False"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
